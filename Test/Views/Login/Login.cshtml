@model Login

@{
    ViewBag.Title = "User Login";
}

<h1>ლოგინი</h1>

<div class="row">
    <div class="col-md-3">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User">მომხმარებელი</label>
                <input asp-for="User" class="form-control" placeholder="მომხმარებელი" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">პაროლი</label>
                <input asp-for="Password" class="form-control" placeholder="პაროლი" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
            <br />
            <br />
            <p style="color: red">@ViewBag.Message</p>
        </form>
    </div>
</div>