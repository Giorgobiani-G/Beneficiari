@model NewVisitModel

@{
    ViewData["Title"] = "NewVisit";
}

<h1>ახალი ვიზიტი</h1>

<div class="row" style="margin-left:0px">

    <form method="post" class="form-horizontal" role="form" asp-controller="Home" asp-action="NewVisit">

        <div class="form-group">
            <label class="control-label">ვიზიტის ტიპი</label>
            <div>
                <select class="form-control" style="width:185px" name="tipi">
                    <option selected>აირჩიეთ</option>
                    <option value="ბინა">ბინა</option>
                    <option value="ამბულატორია">ამბულატორია</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">თარიღი და დრო</label>
            <div>
                <input name="tarigdro" type="date" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label"> ვიზიტის ნომერი</label>
            <div>
                <input type="text" style="border-style:hidden" value="@ViewBag.max" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">ბენეფიციარი</label>
            <div>
                <select class="form-control" style="width:185px" asp-items="ViewBag.Data" name="personalId">
                    <option value="">აირჩიეთ</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">სიმპტომები</label>
            <div>
                <select name="simptomebi" style="width:185px" class="form-control">
                    <option selected>აირჩიეთ</option>
                    <option value="არა">კი</option>
                    <option value="არა">არა</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Covid-19/ანტიგენი</label>
            <div>
                <select name="mdgomareoba" style="width:185px" class="form-control">
                    <option selected>აირჩიეთ</option>
                    <option value="ნეგატიური">ნეგატიური</option>
                    <option value="პოზიტიური">პოზიტიური</option>
                </select>
            </div>
        </div>

        <button type="submit" style="margin-left: 0px;" class="btn btn-success">Register</button>
        <button asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</button>
    </form>
</div>
