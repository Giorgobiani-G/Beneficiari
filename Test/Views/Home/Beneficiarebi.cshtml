@model IEnumerable<Beneficiari>
@{
    ViewData["Title"] = "ბენეფიციარები";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>ბენეფიციარები</h1>
<br />


<form asp-controller="Home" asp-action="Beneficiarebi" asp-route-pageSize="@ViewBag.Page" method="post">

    <p>
        <input type="text" name="searchText" id="searchText" value="@ViewBag.CurrentFilter">
        <input type="submit" value="Search" />
        <a asp-action="Beneficiarebi" asp-route-pageSize="@ViewBag.Page">Back To Full List</a>
    </p>

    <div class="row float-right">
        <div class="p-2">
            Showing @((pager.CurrentPage - 1) * pager.PageSize + 1)-@(pager.PageSize * pager.CurrentPage > pager.TotalItems ? pager.TotalItems : pager.PageSize * pager.CurrentPage) of @pager.TotalItems Items
        </div>
        <span class="float-right">
            <select class="form-control" asp-items="ViewBag.PageSizes" onchange="ChangePageSize(this);">
            </select>
        </span>
    </div>
</form>

<div class="nav-item inline">
    <a asp-controller="Home" asp-action="BenefToExcel"> <img src="https://img.icons8.com/material-rounded/24/26e07f/export-excel.png" /> </a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                თარიღი
            </th>
            <th>
                პ/ნ
            </th>

            <th>
                სახელი
            </th>
            <th>
                გვარი
            </th>
            <th>
                დაბ.თარიღი
            </th>

            <th>
                ასაკი
            </th>
            <th>
                მისამართი
            </th>
            <th>
                ტელეფონი
            </th>
            <th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Tarigi.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Piradobisnomeri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Saxeli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gvari)
                </td>
                <td>
                    @item.DabTarigi.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asaki)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Misamarti)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefoni)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Benid" asp-route-pageSize="@ViewBag.Page" asp-route-searchText="@ViewBag.CurrentFilter">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Benid" asp-route-pageSize="@ViewBag.Page" asp-route-searchText="@ViewBag.CurrentFilter">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Beneficiarebi" asp-route-searchText="@ViewBag.CurrentFilter" asp-route-pageSize="@ViewBag.Page" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Beneficiarebi" asp-route-searchText="@ViewBag.CurrentFilter" asp-route-pageSize="@ViewBag.Page" asp-route-pg="@(pager.CurrentPage-1)">Previous</a>
                </li>
            }
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge==pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="Beneficiarebi" asp-route-searchText="@ViewBag.CurrentFilter" asp-route-pageSize="@ViewBag.Page" asp-route-pg="@pge">@pge</a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="Beneficiarebi" asp-route-searchText="@ViewBag.CurrentFilter" asp-route-pageSize="@ViewBag.Page" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Home" asp-action="Beneficiarebi" asp-route-searchText="@ViewBag.CurrentFilter" asp-route-pageSize="@ViewBag.Page" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>

<script>
    function ChangePageSize(obj) {
        var singleValues = $("#searchText").val();
        window.location.href = "/Home/Beneficiarebi" + "?pageSize=" + obj.value;
    }
</script>


