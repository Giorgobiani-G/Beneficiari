@model Registration
@{
    ViewData["Title"] = "რეგისტრაცია";
}
<style>
    label {
        display: inline-block;
    }
</style>

<h1>რეგისტრაცია</h1>

<div class="row">
    <div class="col-md-3">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username">მომხმარებელი</label>             
                    <input asp-for="Username" type="text" id="firstName" placeholder="მომხმარებელი" class="form-control" autofocus>
                    <span asp-validation-for="Username" class="text-danger"></span>             
            </div>
            <div class="form-group">
                <label asp-for="Password">პაროლი</label>
                    <input asp-for="Password" type="Password" id="password" placeholder="პაროლი" class="form-control" name="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" style="margin:auto" class="btn btn-primary">Register</button>
        </form>
    </div>
    <br />
</div>
<br />
<p>@ViewBag.Message</p>